{--                        ANSI                                      --}
{----------------------------------------------------------------------}
Function ANSIForground(I:Byte) : string;
var z:string[4];
begin
     case I of
          0:z:='0;30';
          1:z:='0;34';
          2:z:='0;32';
          3:z:='0;36';
          4:z:='0;31';
          5:z:='0;35';
          6:z:='0;33';
          7:z:='0;37';
          8:z:='1;30';
          9:z:='1;34';
          10:z:='1;32';
          11:z:='1;36';
          12:z:='1;31';
          13:z:='1;35';
          14:z:='1;33';
          15:z:='1;37';
     end;
     AnsiForground:=AnsiEsc+'['+z+'m';
end;
{----------------------------------------------------------------------}
Function ANSIBackground(I:Byte) : string;
var
   z:string[2];
begin
     case I of
          0:z:='40';
          1:z:='44';
          2:z:='42';
          3:z:='46';
          4:z:='41';
          5:z:='45';
          6:z:='43';
          7:z:='47';
     end;
     ansibackground:=ANSIEsc+'['+z+'m';
end;
{----------------------------------------------------------------------}
Function ANSIDefault : string;
begin
 AnsiDefault:=ANSIEsc+'[0m';
end;
{----------------------------------------------------------------------}
Function ANSIClrScr : string;
begin
     AnsiClrScr:=ANSIEsc+'[2J';
end;
{----------------------------------------------------------------------}
Function AnsiGotoXY(X,Y:Byte) : string;
var
   SX,SY:string[3];
begin
     Str(X,SX);
     Str(Y,SY);
     AnsiGotoXY:=ANSIEsc+'['+SY+';'+SX+'H';
end;
